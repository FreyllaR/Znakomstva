<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/purple"
        android:padding="16dp">

        <!-- Заголовок для фото и видео -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Фотокарточки"
            android:fontFamily="@font/semibold"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- GridLayout для фото и видео -->
        <GridLayout
            android:id="@+id/photosGridLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:columnCount="3"
            android:rowCount="2">

            <!-- Ячейки для добавления фото -->
            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                app:cardCornerRadius="25dp"
                app:cardElevation="4dp">

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:background="@android:color/darker_gray"
                    android:scaleType="centerCrop" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                app:cardCornerRadius="25dp"
                app:cardElevation="4dp">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:background="@android:color/darker_gray"
                    android:scaleType="centerCrop" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:layout_marginLeft="2dp"
                app:cardCornerRadius="25dp"
                app:cardElevation="4dp">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:background="@android:color/darker_gray"
                    android:scaleType="centerCrop" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                app:cardCornerRadius="25dp"
                app:cardElevation="4dp">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:background="@android:color/darker_gray"
                    android:scaleType="centerCrop" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:layout_marginLeft="2dp"
                app:cardCornerRadius="25dp"
                app:cardElevation="4dp">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:background="@android:color/darker_gray"
                    android:scaleType="centerCrop" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:layout_marginLeft="2dp"
                app:cardCornerRadius="25dp"
                app:cardElevation="4dp">

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:background="@android:color/darker_gray"
                    android:scaleType="centerCrop" />
            </androidx.cardview.widget.CardView>

        </GridLayout>

        <Button
            android:id="@+id/buttonphoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/black"
            android:fontFamily="@font/semibold"
            android:padding="16dp"
            android:text="Добавить фото"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/nameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Введите ваше имя"
            android:inputType="text"
            android:fontFamily="@font/semibold"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:padding="8dp" />

        <EditText
            android:id="@+id/ageEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Введите ваш возраст"
            android:inputType="number"
            android:fontFamily="@font/semibold"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:padding="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="О себе"
            android:fontFamily="@font/semibold"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/aboutEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Напишите о себе"
            android:inputType="textMultiLine"
            android:fontFamily="@font/semibold"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:lines="4"
            android:gravity="top"
            android:padding="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Цель знакомства"
            android:fontFamily="@font/semibold"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />



        <RadioGroup
            android:id="@+id/purposeRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/seriousRelationship"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Серьезные отношения"
                android:fontFamily="@font/semibold"
                android:textColor="@color/white"
                />

            <RadioButton
                android:id="@+id/casualRelationship"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/semibold"
                android:textColor="@color/white"
                android:text="Свободные отношения" />

            <RadioButton
                android:id="@+id/friendship"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/semibold"
                android:textColor="@color/white"
                android:text="Дружеское общение" />

            <RadioButton
                android:id="@+id/newExperience"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/semibold"
                android:textColor="@color/white"
                android:text="Новый опыт" />
        </RadioGroup>

        <!-- Интересы -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Интересы"
            android:fontFamily="@font/semibold"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- Хобби -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/semibold"
            android:textColor="@color/white"
            android:text="Хобби" />
        <Spinner
            android:id="@+id/hobbySpinner"
            android:layout_width="match_parent"
            android:fontFamily="@font/semibold"
            android:textColor="@color/white"
            android:layout_height="wrap_content" />

        <!-- Социальная жизнь -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/semibold"
            android:textColor="@color/white"
            android:text="Социальная жизнь" />
        <Spinner
            android:id="@+id/socialLifeSpinner"
            android:layout_width="match_parent"
            android:fontFamily="@font/semibold"
            android:textColor="@color/white"
            android:layout_height="wrap_content" />

        <!-- Творчество -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/semibold"
            android:textColor="@color/white"
            android:text="Творчество" />
        <Spinner
            android:id="@+id/creativitySpinner"
            android:layout_width="match_parent"
            android:fontFamily="@font/semibold"
            android:textColor="@color/white"
            android:layout_height="wrap_content" />

        <!-- Активный образ жизни -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/semibold"
            android:textColor="@color/white"
            android:text="Активный образ жизни" />
        <Spinner
            android:id="@+id/activeLifestyleSpinner"
            android:layout_width="match_parent"
            android:fontFamily="@font/semibold"
            android:textColor="@color/white"
            android:layout_height="wrap_content" />

        <!-- Спорт -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/semibold"
            android:textColor="@color/white"
            android:text="Спорт" />
        <Spinner
            android:id="@+id/sportSpinner"
            android:layout_width="match_parent"
            android:fontFamily="@font/semibold"
            android:textColor="@color/white"
            android:layout_height="wrap_content" />

        <!-- Путешествия -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/semibold"
            android:textColor="@color/white"
            android:text="Путешествия" />
        <Spinner
            android:id="@+id/travelSpinner"
            android:layout_width="match_parent"
            android:fontFamily="@font/semibold"
            android:textColor="@color/white"
            android:layout_height="wrap_content" />

        <!-- Время дома -->
        <TextView
            android:layout_width="wrap_content"
            android:fontFamily="@font/semibold"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:text="Время дома" />
        <Spinner
            android:id="@+id/homeTimeSpinner"
            android:fontFamily="@font/semibold"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Фильмы и сериалы -->
        <TextView
            android:layout_width="wrap_content"
            android:fontFamily="@font/semibold"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:text="Фильмы и сериалы" />
        <Spinner
            android:id="@+id/moviesSpinner"
            android:fontFamily="@font/semibold"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Животные -->
        <TextView
            android:layout_width="wrap_content"
            android:fontFamily="@font/semibold"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:text="Животные" />
        <Spinner
            android:id="@+id/animalsSpinner"
            android:layout_width="match_parent"
            android:fontFamily="@font/semibold"
            android:textColor="@color/white"
            android:layout_height="wrap_content" />

        <!-- Личное (рост, свободен или нет) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/semibold"
            android:textColor="@color/white"
            android:text="Личное (рост, свободен или нет)" />
        <Spinner
            android:id="@+id/personalGrowthSpinner"
            android:layout_width="match_parent"
            android:fontFamily="@font/semibold"
            android:textColor="@color/white"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/semibold"
            android:textColor="@color/white"
            android:text="Отношение к алкоголю и курению" />
        <Spinner
            android:id="@+id/alcoholSmokingSpinner"
            android:layout_width="match_parent"
            android:fontFamily="@font/semibold"
            android:textColor="@color/white"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:fontFamily="@font/semibold"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:text="Спортивное телосложение" />
        <Spinner
            android:id="@+id/sportyBodySpinner"
            android:fontFamily="@font/semibold"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/nextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/black"
            android:fontFamily="@font/semibold"
            android:padding="16dp"
            android:text="Далее"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </LinearLayout>
</ScrollView>